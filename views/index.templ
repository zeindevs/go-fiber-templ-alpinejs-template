package views

import (
	"github.com/zeindevs/go-fiber-templ-alpinejs-template/views/components"
)

templ Index(title string) {
	@Layout(title) {
		<header class="text-center py-20 bg-secondary">
			<div class="container max-w-5xl px-3 space-y-5">
				<h1 class="text-3xl lg:text-4xl font-bold">{title}</h1>
				<p></p>
				@components.Button("Get Started", "h-10 rounded-md px-8")
			</div>
		</header>
	}
}
